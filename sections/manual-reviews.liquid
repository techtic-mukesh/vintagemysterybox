<div class="manual-reviews-container">
  <div class="manual-reviews">
    {% for block in section.blocks %}
      <div class="review-block">
        <h3>{{ block.settings.review_title }}</h3>
        <p>{{ block.settings.review_text }}</p>
        <p><strong>Rating:</strong> {{ block.settings.review_rating }} â˜…</p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Manual Reviews",
  "settings": [],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "text",
          "id": "review_title",
          "label": "Review Title"
        },
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review Text"
        },
        {
          "type": "number",
          "id": "review_rating",
          "label": "Rating (1-5)",
          "default": 5
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Manual Reviews",
      "category": "Custom"
    }
  ]
}
{% endschema %}
