        const btn = e.currentTarget;
        btn.style.backgroundColor = '#a9a9a9';

        // Hide text
        const originalText = btn.textContent;
        btn.textContent = '';

        // Create spinner
        const spinner = document.createElement("span");
        spinner.className = "spinner";
        btn.appendChild(spinner);

